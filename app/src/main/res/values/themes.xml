<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BiteByByte" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/lightgray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gray_blue_500</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar.PrimaryColor</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CameraButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/gray_blue_500</item>
        <item name="android:background">@drawable/button_rounded</item>
    </style>
    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_default</item>
    </style>
    <style name="InputMultiline" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">120dp</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:gravity">top</item>
        <item name="android:autofillHints" />
        <item name="android:background">@drawable/background_rounded_border</item>
        <item name="android:padding">@dimen/multiline_input_padding</item>
    </style>
    <style name="BorderedInput" parent="InputMultiline">
        <item name="android:inputType">text</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/notosansregular</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar.PrimaryColor</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.AppCompat.ActionBar.PrimaryColor">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>
</resources>