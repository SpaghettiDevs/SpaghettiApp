<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BiteByByte" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gray_blue_500</item>
    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_rounded</item>
    </style>
    <style name="CameraButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/gray_blue_500</item>
        <item name="android:background">@drawable/button_rounded</item>
    </style>
    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_default</item>
    </style>
</resources>